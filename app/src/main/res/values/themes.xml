<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_900</item>
        <item name="colorAccent">@color/purple_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Movies.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.DarkOverlay" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" >
        <item name="android:background">@color/teal_900</item>
    </style>

    <style name="AppTheme.Button" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="AppTheme.Text.Body1" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_body1</item>
    </style>

    <style name="AppTheme.Text.Body2" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size_body2</item>
    </style>

    <style name="AppTheme.Text.Headline" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Body1.Dark" parent="@style/AppTheme.Text.Body1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Text.Body2.Dark" parent="@style/AppTheme.Text.Body2">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>